@model OnlineShop.Models.ProductTypes
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit Product Types<i class="bi bi-basket2-fill"></i></h2>

<form asp-action="Edit"method="post">
    <div class="p-4 rounded border">
        <input type="hidden"asp-for="Id" />
        <div asp-validation-summary="ModelOnly"class=" text-danger">

        </div>
        <div   class=" form-group row">
            <div class=" col-2">
                <label asp-for="ProductType"></label>

            </div>
            <div class=" col-5">
                <input asp-for="ProductType"class="form-control" />

            </div>
            <span asp-validation-for="ProductType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class=" btn btn-outline-primary "><i class="bi bi-cloud-upload"></i>Update</button>
            @*<input type="submit"class=" btn btn-primary " value="Save" />*@
            <a asp-action="Index" class="btn btn-outline-danger">Back to List <i class="bi bi-backspace"></i></a>
               
                
                
        </div>

    </div>
</form>
@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


    
