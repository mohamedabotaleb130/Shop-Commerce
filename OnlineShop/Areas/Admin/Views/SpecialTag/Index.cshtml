@using OnlineShop.Models;
@model IEnumerable<SpecialTag>
@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Special Type list  </h2>
    </div>
    <div class="col-6 text-right ">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Tag Name </a>
    </div>

</div>
<br />
<div>
   <table class="table table-striped border">


  @*<table class="table table-striped table-hover ">*@

        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(b=>b.Name)

             </th>
             <th></th>
             <th></th>
          
            

        </tr>
      @foreach (var item in Model)
  {
       <tr>
           <td>
                @item.Name
           </td>
          
           <td>
        <partial name="_TagPageButtonPartial" model="@item.Id" />
           </td>
        
       </tr>
  }
    </table>
</div>

